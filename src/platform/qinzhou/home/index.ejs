<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
  "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
  <meta name="renderer" content="webkit|ie-stand"/>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta http-equiv="Pragma" content="no-cache"/>
  <meta http-equiv="Cache-Control" content="no-cache, must-revalidate"/>
  <meta http-equiv="Expires" content="0"/>
  <title>优课智慧教育云平台</title>
</head>
<link href="../home/css/style.css" rel="stylesheet"/>
<link href="../../../lib/jquery/css/jquery.fullPage.css" rel="stylesheet"/>
<link rel="stylesheet" type="text/css" href="../../../lib/layer/skin/layer.css"/>
<script>
  if (top.location != self.location) {
    top.location = self.location;//防止页面被框架包含
  }
</script>
<body class="bg-white">
<div class="wrap">
  <%
  if (typeof custom == 'undefined') {
    custom = 'standard';
  }
  %>
  <%- include('../../../public/'+custom+'/header/view/_header.ejs') %>
  <!--banner-->
  <div class="banner">
  </div>
  <!--main_content-->
  <div class="main_content">
    <div class="main_box">
      <!--左教育新闻 右进入我的空间-->
      <div class="main_type clearFix">
        <div class="main_left_type">
          <!--教育新闻-->
          <div class="news">
            <div class="title">
              <ul class="tab_type" id="tab_type">
                <li class="tab_active">教育新闻</li>
                <li>通知公告</li>
                <li>成果展示</li>
              </ul>
              <a href="../news/sitenewsListInCategory.html?currentPage=1&tab=1" target="_blank">更多>></a>
            </div>
            <div class="newscontent_box clearFix" id="newscontent_box">
              <div class="img"><img src="./images/default_news.png.jpg"/></div>
              <div class="newscontent-box-con">
                <h2><a href="jacvascript:;" target="_blank">还未加载出来...</a></h2>
                <p class="dtl">还未加载出来...</p>
                <ul class="tab show" id="newscontent"></ul>
                <script id="newscontent_" type="text/html">
                  {{each data}}
                  <li class="clearFix">
                    {{if category==3}}
                    <a href="../notice/noticeDetail.html?id={{$value.id}}&index={{$index}}" target="_blank" class="news_type">{{$value.title}}</a>
                    {{else}}
                    <a href="../news/sitenewsDetail.html?id={{$value.id}}&index={{$index+1}}&category={{category}}&isComm=1"
                       target="_blank" class="news_type">{{$value.title}}</a>
                    {{/if}}
                    <span class="time">{{$value.crtDttm.split(' ')[0]}}</span>
                  </li>
                  {{/each}}
                </script>
                 <!-- <li class="clearFix">
                    <a href="../news/sitenewsDetail.html?id={{$value.id}}&index={{$index}}&category={{category}}&isComm=1"
                       target="_blank" class="news_type">教育新闻教育</a>
                    <span class="time">2015-09-22</span>
                  </li>-->
              </div>
            </div>
          </div>
        </div>
        <div class="main_right_type">
          <!--统计-->
          <div class="statistics pad-15">
            <div class="item">
              <span class="icon icon-user"></span>
              <div class="title1">用户</div>
              <span class="count" id="count_users">&nbsp;</span>
            </div>
            <div class="item">
              <span class="icon icon-resource"></span>
              <div class="title1">资源</div>
              <span class="count" id="count_resources">&nbsp;</span>
            </div>
            <div class="item">
              <span class="icon icon-space"></span>
              <div class="title1">空间</div>
              <span class="count" id="count_spaces">&nbsp;</span>
            </div>
          </div>
          <!--进入我的空间-->
          <div class="btn-myspace">进入我的空间</div>
        </div>
      </div>
      <!--教学资源等入口-->
      <div class="enter-block">
        <div class="fl">
          <a href="javascript:;" class="enter-block-item teach">
            <div class="enter-block-con"><input appIdName="teachresouce_appId" type="button" class="btn btn-blue"
                                                value="进入应用"></div>
          </a>
          <a href="javascript:;" class="enter-block-item studio">
            <div class="enter-block-con"><input appIdName="studio_appId" type="button" class="btn btn-blue" value="进入应用"></div>
          </a>
          <a href="javascript:;" class="enter-block-item activity">
            <div class="enter-block-con"><input appIdName="activityresult_appId" type="button" class="btn btn-blue" value="进入应用"></div>
          </a>
          <a href="javascript:;" class="enter-block-item data">
            <div class="enter-block-con"><input appIdName="datawatch_appId" type="button" class="btn btn-blue" value="进入应用"></div>
          </a>
          <a href="javascript:;" class="enter-block-item area">
            <div class="enter-block-con"><input appIdName="qyjy_appId" type="button" class="btn btn-blue" value="进入应用"></div>
          </a>
        </div>
        <div class="fr">
          <a href="javascript:;" class="enter-block-item document">
            <div class="enter-block-con"><input appIdName="gwlz_appId" type="button" class="btn btn-blue"
                                                value="进入应用"></div>
          </a>
        </div>
      </div>
      <!--左热门空间 右个人空间动态-->
      <div class="main_type clearFix">
        <div class="main_left_type">
          <!--热门空间-->
          <div class="goodspace">
            <h3 class="title">
              <strong>热门空间</strong>
            </h3>
            <ul class="goodspace_type" id="goodspace_type">
              <li class="goodspace_active" type="6"><span>教研员</span></li>
              <li type="2"><span>教师</span></li>
              <li type="3"><span>学生</span></li>
              <li type="5"><span>家长</span></li>
            </ul>
            <div class="goodspace_content" id="goodspace_content">
              <ul class="clearFix"></ul>
              <script id="goodspaceContent" type="text/html">
                {{each data}}
                <li>
                  <a href="{{$value.spaceUrl}}" target="_blank">
                    <dl class="people_news">
                      <dt><img src="{{$value.icon}}" onerror="imgError(this, './images/default_renren.jpg')"/></dt>
                      <dd class="name">{{$value.name}}</dd>
                      <dd>{{$value.label}}</dd>
                    </dl>
                  </a>
                </li>
                {{/each}}
              </script>
            </div>
          </div>
        </div>
        <div class="main_right_type">
          <!--个人空间动态-->
          <div class="member-dyn">
            <h3 class="title">
              <strong>个人空间动态</strong>
            </h3>
            <div class="dyn-list-box">
              <ul class="dyn-list" id="dynamic_list"></ul>
            </div>

            <script type="text/html" id="dynamicList">
              {{each data}}
              <li class="dyn-li">
                <div class="dyn-li-innerbox">
                <a class="member-pic" target="_blank" href="{{$value.memberInfo.spaceUrl}}">
                  <img src="{{$value.memberInfo.picurl}}" alt="" onerror="imgError(this, './images/default_renren.jpg')">
                </a>
                <div>
                  <a class="dyn-name" target="_blank" href="{{$value.memberInfo.spaceUrl}}">
                    {{$value.title}}
                  </a>
                  <p class="message clearFix"><span>{{$value.memberInfo.username}}</span>
                    <time>{{$value.memberInfo.createTime}}</time>
                  </p>
                </div>
                </div>
              </li>
              {{/each}}
            </script>
          </div>
        </div>
      </div>
      <!--热门学校空间-->
      <div class="school">
        <p class="school_title">
          <strong>热门学校空间</strong>
        </p>
        <div class="schoolimgs_box">
          <div class="hot-school">
            <ul class="clearFix" id="school_space"></ul>
            <script type="text/html" id="schoolSpace">
              {{each data}}
              <li>
                <a target="_blank" href="{{$value.spaceUrl}}">
                  <img src="{{$value.icon}}" onerror="imgError(this, './images/default_school.jpg')">
                  <span>{{$value.name}}</span>
                </a>
              </li>
              {{/each}}
            </script>
          </div>
        </div>
      </div>
      <!--数字图书馆-->
      <!--<div class="numberlibrary">
        <div class="numberlibrary_left">
          <p class="title">
            <strong>数字图书馆</strong>
            <a href="javascript:void(0)" id="morebook" type="ebook_appId">更多>></a>
          </p>
          <div class="numberlibrary_content">
            <ul class="numberlibrary_list_box clearFix"></ul>
            <script type="text/html" id="numberlibraryContent">
              {{each data}}
              <li bookId="{{$value.bookid}}" ebookReadUrl="{{host}}">
                <a href="{{host}}read/online?bookId={{$value.bookid}}" target="_blank">
                  <dl class="book_news">
                    <dt><img src="{{$value.bookimage}}middle.jpg" onerror="imgError(this, './images/default_library.jpg')"/></dt>
                    <dd class="book_name">{{$value.bookname}}</dd>
                    <dd><input type="button" class="startreading" value="开始阅读"/></dd>
                  </dl>
                </a>
              </li>
              {{/each}}
            </script>
          </div>
        </div>
      </div>-->
      <!--友情链接-->
      <div class="link_content">
        <p class="link_title">
          <strong>友情链接</strong>
        </p>
        <ul class="clearFix"></ul>
        <script type="text/html" id="linkContent">
          {{each data}}
          <li><a href="{{$value.website}}" target="_blank"><img src="{{$value.pic}}" onerror="imgError(this, './images/default_link.jpg')
"/></a></li>
          {{/each}}
        </script>
      </div>
    </div>
  </div>
</div>
<div class="backToTop">返回顶部</div>
<%- include('../../../public/'+custom+'/footer/view/_footer.ejs') %>
<script>
  function imgError(obj,src) {
    obj.onerror=null;
    obj.src=src;
  }
</script>
<script src="../../../lib/requires/requires.js" data-main="../home/js/index.js"></script>
</body>
</html>
